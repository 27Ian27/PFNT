{% extends 'base.html.twig' %}

{% block title %}Empleado index{% endblock %}

{% block body %}
    <h1>Empleado index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>FechaDeNacimiento</th>
                <th>Rol</th>
                <th>UsuarioIngreso</th>
                <th>ContrasenaIngreso</th>
                <th>IdentificadorJefe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empleado in empleados %}
            <tr>
                <td>{{ empleado.id }}</td>
                <td>{{ empleado.nombre }}</td>
                <td>{{ empleado.apellido }}</td>
                <td>{{ empleado.fechaDeNacimiento ? empleado.fechaDeNacimiento|date('Y-m-d') : '' }}</td>
                <td>{{ empleado.rol }}</td>
                <td>{{ empleado.usuarioIngreso }}</td>
                <td>{{ empleado.contrasenaIngreso }}</td>
                <td>{{ empleado.identificadorJefe }}</td>
                <td>
                    <a href="{{ path('empleado_show', {'id': empleado.id}) }}">show</a>
                    <a href="{{ path('empleado_edit', {'id': empleado.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('empleado_new') }}">Create new</a>
{% endblock %}
